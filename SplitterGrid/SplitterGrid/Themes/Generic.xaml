<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="clr-namespace:SplitterGrid"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:core="using:Microsoft.Xaml.Interactions.Core">
   
    <Style TargetType="local:SplitterGridLayout">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SplitterGridLayout">
                    <Grid x:Name="parentGrid">
                        <local:SplitterGridControl x:Name="rootSplitterGrid"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
