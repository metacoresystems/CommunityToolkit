<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="DemonstrationApp.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DemonstrationApp.WinUI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>
                        
            <!-- The data template for the test panel -->
            <DataTemplate x:Key="testPanelDataTemplate">
                <Grid Background="{Binding RandomColor}">
                    <TextBlock Text="{Binding RandomNumber}" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Grid>
            </DataTemplate>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
