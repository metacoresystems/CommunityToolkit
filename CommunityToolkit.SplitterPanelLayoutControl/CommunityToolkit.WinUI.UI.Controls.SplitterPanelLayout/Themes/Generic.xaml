<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:local="using:CommunityToolkit.WinUI.UI.Controls.SplitterPanelLayout"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style BasedOn="{StaticResource DefaultSplitterPanelLayoutControlStyle}" TargetType="local:SplitterPanelLayoutControl"/>

    <Style x:Key="DefaultSplitterPanelLayoutControlStyle" TargetType="local:SplitterPanelLayoutControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:SplitterPanelLayoutControl">
                    <Grid x:Name="parentGrid">
                        <local:SplitterPanelControl x:Name="rootSplitterPanel"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
