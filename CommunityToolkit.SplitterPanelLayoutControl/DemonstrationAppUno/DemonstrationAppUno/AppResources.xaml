<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.MergedDictionaries>
		<!-- Load WinUI resources -->
        <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
    </ResourceDictionary.MergedDictionaries>

    <!-- The data template for the test panel -->
    <DataTemplate x:Key="testPanelDataTemplate">
        <Grid Background="{Binding RandomColor}">
            <TextBlock Text="{Binding RandomNumber}" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
    </DataTemplate>

</ResourceDictionary>
